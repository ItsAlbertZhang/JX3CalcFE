{
    "$schema": "../node_modules/@tauri-apps/cli/schema.json",
    "build": {
        "beforeBuildCommand": "npm run build",
        "beforeDevCommand": "npm run dev",
        "devPath": "http://localhost:3000",
        "distDir": "../out"
    },
    "package": {
        "productName": "jx3calc",
        "version": "1.0.3"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "app": {
                "all": true
            },
            "clipboard": {
                "readText": true
            },
            "dialog": {
                "open": true
            },
            "fs": {
                "readFile": true
            },
            "http": {
                "request": true,
                "scope": ["http://cms.jx3box.com/*"]
            },
            "shell": {
                "open": true
            }
        },
        "bundle": {
            "active": true,
            "category": "DeveloperTool",
            "copyright": "",
            "deb": {
                "depends": []
            },
            "externalBin": [],
            "icon": ["icons/favicon.png", "icons/favicon.ico"],
            "identifier": "com.jx3calc",
            "longDescription": "",
            "macOS": {
                "entitlements": null,
                "exceptionDomain": "",
                "frameworks": [],
                "providerShortName": null,
                "signingIdentity": null
            },
            "resources": [],
            "shortDescription": "",
            "targets": ["msi", "app", "updater"],
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": "",
                "wix": {
                    "language": "zh-CN"
                }
            }
        },
        "security": {
            "csp": null
        },
        "updater": {
            "active": true,
            "endpoints": ["https://gitee.com/ItsAlbertZhang/JX3CalcFE/raw/master/update.json"],
            "dialog": true,
            "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDZCQUNBMjlEMzFFNEVCN0QKUldSOTYrUXhuYUtzYThpSWRwb0hkalMzRVdFKzJ4ckt2aGVZc0NMdGQrUXU4K1hFRG5sQ25pa00K"
        },
        "windows": [
            {
                "fullscreen": false,
                "height": 900,
                "width": 1650,
                "resizable": true,
                "title": "剑网3计算器"
            }
        ]
    }
}
